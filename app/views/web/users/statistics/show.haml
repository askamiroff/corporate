= simple_form_for @filter_form, method: :get, url: {}, html: {class: 'form-inline'} do |f|
  .form-group
    = user_statistics_draw_months @filter_form
  = f.input :start_date, as: :datetime_picker, label: false
  = f.input :end_date, as: :datetime_picker, label: false
  = f.button :submit

%table.table.table-striped
  %thead
    %tr
      %th= han :task, :id
      %th= t '.task_name'
      %th= t '.user_elapsed_time'
      %th= t '.user_reward'
  %tbody
    - @statistics.each do |stat|
      %tr
        - stat[:task].tap do |task|
          %td= task.id
          %td= link_to task, task
        %td= distance_of_time_in_words stat[:user_elapsed_time]
        %td= sprintf '%.2f', stat[:reward]
    %tr
      %td{ colspan: 2 }
      %td
        %strong.pull-right= t '.total_reward'
      %td
        %strong= sprintf '%.2f', @statistics.sum{ |stat| stat[:reward] }
